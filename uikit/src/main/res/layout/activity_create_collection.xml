<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f7">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 标题输入 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/collection_title"
                android:textColor="#666666"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/titleEditText"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape_rounded_white"
                android:hint="@string/collection_title_hint"
                android:inputType="text"
                android:maxLines="1"
                android:padding="12dp"
                android:textSize="16sp" />

            <!-- 描述输入 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/collection_desc"
                android:textColor="#666666"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/descEditText"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape_rounded_white"
                android:gravity="top"
                android:hint="@string/collection_desc_hint"
                android:inputType="textMultiLine"
                android:padding="12dp"
                android:textSize="16sp" />

            <!-- 模板输入 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/collection_template"
                android:textColor="#666666"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/templateEditText"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape_rounded_white"
                android:hint="@string/collection_template_hint"
                android:inputType="text"
                android:maxLines="1"
                android:padding="12dp"
                android:textSize="16sp" />

            <!-- 过期类型选择 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/collection_expire_type"
                android:textColor="#666666"
                android:textSize="14sp" />

            <RadioGroup
                android:id="@+id/expireTypeGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape_rounded_white"
                android:orientation="horizontal"
                android:padding="4dp">

                <RadioButton
                    android:id="@+id/radioNoExpire"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_radio_button"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="@string/collection_no_expire"
                    android:textColor="@color/selector_radio_text"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/radioSetExpire"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_radio_button"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/collection_set_expire"
                    android:textColor="@color/selector_radio_text"
                    android:textSize="14sp" />
            </RadioGroup>

            <!-- 日期时间选择器（默认隐藏） -->
            <LinearLayout
                android:id="@+id/expirePickerContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_rounded_white"
                android:orientation="horizontal"
                android:padding="12dp"
                android:visibility="gone">

                <DatePicker
                    android:id="@+id/expireDatePicker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner"
                    android:spinnersShown="true" />

                <TimePicker
                    android:id="@+id/expireTimePicker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:timePickerMode="spinner" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
