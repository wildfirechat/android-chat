<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ImageView
        android:id="@+id/portraitImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_group_chat" />

    <TextView
        android:id="@+id/groupNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        tools:text="@string/group_name_placeholder" />

    <!-- 修改后的文本框 -->
    <EditText
        android:id="@+id/reasonEditText"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="@android:drawable/editbox_background"
        android:gravity="top|start"
        android:hint="请输入申请理由"
        android:inputType="textMultiLine"
        android:minLines="5"
        android:padding="15dp"
        android:scrollbars="vertical"
        android:textColorHint="#A9A9A9"
        android:textSize="14sp" />

    <!-- 双按钮容器 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingVertical="8dp">

        <!-- 直接加入按钮 -->
        <Button
            android:id="@+id/actionButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:background="@drawable/bg_positive_button"
            android:text="@string/join_group_chat"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:stateListAnimator="@null"
            android:elevation="2dp"/>

        <!-- 审批加入按钮 -->
        <Button
            android:id="@+id/actionButtonByApprove"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:background="@drawable/bg_neutral_button"
            android:text="@string/join_group_chat_by_approve"
            android:textColor="@color/primary_color"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:stateListAnimator="@null"
            android:elevation="2dp"/>

    </LinearLayout>
</LinearLayout>