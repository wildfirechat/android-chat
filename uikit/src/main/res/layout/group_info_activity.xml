<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ImageView
        android:id="@+id/portraitImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_group_chat" />

    <TextView
        android:id="@+id/groupNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        tools:text="@string/group_name_placeholder" />

    <!-- 修改后的文本框 -->
    <EditText
        android:id="@+id/reasonEditText"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="@android:drawable/editbox_background"
        android:gravity="top|start"
        android:hint="请输入申请理由"
        android:inputType="textMultiLine"
        android:minLines="5"
        android:padding="15dp"
        android:scrollbars="vertical"
        android:textColorHint="#A9A9A9"
        android:textSize="14sp" />

    <Button
        android:id="@+id/actionButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_user_info_send_msg"
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:text="@string/join_group_chat" />

    <Button
        android:id="@+id/actionButtonByApprove"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_user_info_send_msg"
        android:text="@string/join_group_chat_by_approve"
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:text="@string/join_group_chat_by_approve" />
</LinearLayout>