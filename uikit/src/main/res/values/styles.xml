<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/gray5</item>
        <item name="colorPrimaryDark">@color/gray5</item>
        <!-- 设置activity切换动画 -->
        <!--<item name="android:windowAnimationStyle">@style/activityAnimation</item>-->
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorBackgroundFloating">@color/white</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- 基础按钮样式 -->
    <style name="BaseButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="elevation">2dp</item>
    </style>

    <!-- 确认操作按钮样式 -->
    <style name="PositiveButtonStyle" parent="BaseButtonStyle">
        <item name="backgroundTint">@color/color_primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 中性操作按钮样式 -->
    <style name="NeutralButtonStyle" parent="BaseButtonStyle">
        <item name="backgroundTint">@color/color_secondary</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="AppTheme.LightAppbar">
        <item name="colorPrimary">@color/gray5</item>
        <item name="colorPrimaryDark">@color/gray5</item>
        <item name="actionMenuTextColor">@color/gray15</item>
        <item name="overlapAnchor">false</item>
        <item name="titleTextColor">@color/black2</item>
        <item name="android:textColorPrimary">@color/black2</item>
    </style>

    <style name="AppTheme.DarkAppbar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="overlapAnchor">false</item>
        <item name="titleTextColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="colorControlNormal">@color/gray</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--全屏样式-->
    <style name="AppTheme.FullScreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.TransparentFullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppThemeDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/black</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <!--圆角Dialog-->

    <!--自定义CheckBox样式-->
    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>

    <!--实下滑线样式-->
    <style name="Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5px</item>
        <item name="android:background">@color/line</item>
    </style>

    <!--选项条目样式-->
    <style name="OptionItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="defaultSwitch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="topRoundedImageView_5dp" parent="">
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopLeft">5dp</item>
        <item name="cornerSizeTopRight">5dp</item>
    </style>

    <style name="roundedImageView_8dp" parent="">
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Dialog.FullScreen.Transparent" parent="Theme.AppCompat.Dialog">
        <item name="android:padding">0dp</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppThemeCorrectPrimaryColor" parent="AppTheme">
        <item name="colorPrimary">@color/gray5</item>
    </style>

    <style name="Option">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@color/white</item>
    </style>

</resources>
