<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Backup Information"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black0"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/backupTimeTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Backup Time: "
                        android:textSize="14sp"
                        android:textColor="@color/gray1"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/deviceNameTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Device: "
                        android:textSize="14sp"
                        android:textColor="@color/gray1"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/conversationCountTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Conversations: "
                        android:textSize="14sp"
                        android:textColor="@color/gray1"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/messageCountTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Messages: "
                        android:textSize="14sp"
                        android:textColor="@color/gray1"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/mediaCountTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Media Files: "
                        android:textSize="14sp"
                        android:textColor="@color/gray1" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Restore Options"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black0"
                        android:layout_marginBottom="16dp" />

                    <CheckBox
                        android:id="@+id/includeMediaCheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Include media files"
                        android:checked="true"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Uncheck to restore messages only"
                        android:textSize="12sp"
                        android:textColor="@color/gray1"
                        android:layout_marginStart="32dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Warning"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/red0"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Restoring from backup will merge with existing messages. This process cannot be undone."
                        android:textSize="14sp"
                        android:textColor="@color/gray1" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
