<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray5"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llHeader"
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:background="@drawable/selector_option_item"
            android:gravity="center_vertical"
            android:paddingRight="6px">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginBottom="6px"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="@string/header_pic"
                android:textColor="@color/black0"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/portraitImageView"
                android:layout_width="130px"
                android:layout_height="130px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:scaleType="centerCrop"
                android:src="@mipmap/default_header" />
        </LinearLayout>

        <View
            style="@style/Line"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px" />

        <com.lqr.optionitemview.OptionItemView
            android:id="@+id/oivName"
            style="@style/OptionItem"
            android:background="@drawable/selector_option_item"
            app:left_text="@string/nickname"
            app:left_text_color="@color/black0"
            app:left_text_margin_left="30px"
            app:left_text_size="16sp"
            app:right_text="CSDN_LQR"
            app:right_text_color="@color/gray2"
            app:right_text_margin_right="40px"
            app:right_text_size="14sp" />

        <View
            style="@style/Line"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:orientation="vertical">

        <com.lqr.optionitemview.OptionItemView
            android:id="@+id/oivGender"
            style="@style/OptionItem"
            android:background="@drawable/selector_option_item"
            app:left_text="@string/gender"
            app:left_text_color="@color/black0"
            app:left_text_margin_left="30px"
            app:left_text_size="16sp"
            app:right_text=""
            app:right_text_color="@color/gray2"
            app:right_text_margin_right="40px"
            app:right_text_size="14sp" />

        <View
            style="@style/Line"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px" />

        <com.lqr.optionitemview.OptionItemView
            style="@style/OptionItem"
            android:background="@drawable/selector_option_item"
            app:left_text="@string/area"
            app:left_text_color="@color/black0"
            app:left_text_margin_left="30px"
            app:left_text_size="16sp" />

        <View
            style="@style/Line"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px" />

        <com.lqr.optionitemview.OptionItemView
            android:id="@+id/oivSignature"
            style="@style/OptionItem"
            android:background="@drawable/selector_option_item"
            app:left_text="@string/signature"
            app:left_text_color="@color/black0"
            app:left_text_margin_left="30px"
            app:left_text_size="16sp"
            app:right_text="@string/not_fill"
            app:right_text_color="@color/gray2"
            app:right_text_margin_right="40px"
            app:right_text_size="14sp" />

    </LinearLayout>

</LinearLayout>